<!doctype html>
<html>
  <head>
    <title><%= title %> | Fabelio Monitoring Price</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">Fabelio Monitoring Price</li>
        <li class="breadcrumb-item" aria-current="page"><a href="/">Product</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detail Product</li>
      </ol>
    </nav>
    <%if (error.length > 0) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>
    <div class="card">
      <div class="card-body">
        <div style="margin-bottom: 10px;">
          <a href="<%= product.url %>" target="_blank" class="btn btn-primary btn-sm">Show Original Page</a>
          <span style="margin-left: 20px;">Last Updated </span>
          <span style="color: blue; font-weight: bold;"><%= moment(product.updatedAt).fromNow() %></span>
        </div>
        <div style="margin-top: 30px;">
          <h2><%= product.title %></h2>
        </div>
        <%if (product.appPrice.oldPrice > 0) { %>
        <div style="margin-top: 10px;">
          <span style="font-weight: bold;">Original Price</span>
          <span style="font-weight: bold; color: blue"><%= helpers.formatCurrency(product.appPrice.oldPrice > 0 ? product.appPrice.oldPrice : product.appPrice.finalPrice, 'Rp') %></span>
        </div>
        <div style="margin-top: 10px;">
          <span style="font-weight: bold;">Discount Price</span>
          <span style="font-weight: bold; color: red"><%= helpers.formatCurrency(product.appPrice.oldPrice > 0 ? product.appPrice.finalPrice : 0, 'Rp') %></span>
        </div>
        <% } %>
        <div style="margin-top: 10px;">
          <span style="font-weight: bold;">Sale Price</span>
          <span style="font-weight: bold; color: green"><%= helpers.formatCurrency(product.appPrice.finalPrice, 'Rp') %></span>
        </div>
        <div class="card" style="margin-top: 10px;">
          <div class="card-body">
            <div>
              <%- product.description.html %>
            </div>
            <div style="margin-top: 10px;">
              <%- product.descriptionAdditionalData.html %>
            </div>
          </div>
        </div>
        <%if (product.images.length > 0) { %>
        <div id="carouselImage" class="carousel slide" data-ride="carousel" style="margin-top: 20px;">
          <ol class="carousel-indicators">
            <% for(var i=0; i < product.images.length; i++) { %>
              <li data-target="#carouselImage" data-slide-to="<%= i %>" class="<%= i === 0 ? 'active': ''%>"></li>
            <% } %>
          </ol>
          <div class="carousel-inner">
            <% for(var i=0; i < product.images.length; i++) { %>
              <div class="carousel-item <%= i === 0 ? 'active': ''%>">
                <img src="<%= product.images[i].full %>" class="d-block w-100">
              </div>
            <% } %>
          </div>
          <a class="carousel-control-prev" href="#carouselImage" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselImage" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <% } else { %>
          <img src="<%= product.image %>">
        <% } %>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>
