<!doctype html>
<html>
  <head>
    <title><%= title %> | Fabelio Monitoring Price</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">Fabelio Monitoring Price</li>
        <li class="breadcrumb-item" aria-current="page">Product</li>
        <li class="breadcrumb-item active" aria-current="page">List Product</li>
      </ol>
    </nav>
    <%if (error.length > 0) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <a href="/add" class="btn btn-primary btn-sm mb-3">Add Product</a>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Original Price</th>
                <th scope="col">Discount Price</th>
                <th scope="col">Sale Price</th>
                <th scope="col">Created At</th>
                <th scope="col">Last Update</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i < products.length; i++) { %>
                <tr>
                  <td style="vertical-align: middle;"><%= i+1 %></th>
                  <td style="vertical-align: middle;"><%= products[i].title%></td>
                  <td style="vertical-align: middle;"><%= helpers.formatCurrency(products[i].appPrice.oldPrice > 0 ? products[i].appPrice.oldPrice : products[i].appPrice.finalPrice, 'Rp') %></td>
                  <td style="vertical-align: middle;"><%= helpers.formatCurrency(products[i].appPrice.oldPrice > 0 ? products[i].appPrice.finalPrice : 0, 'Rp') %></td>
                  <td style="vertical-align: middle;"><%= helpers.formatCurrency(products[i].appPrice.finalPrice, 'Rp') %></td>
                  <td style="vertical-align: middle;"><%= moment(products[i].createdAt).format('DD MMMM YYYY HH:mm:ss') %> (<%= (moment(products[i].createdAt).fromNow()) %>) </td>
                  <td style="vertical-align: middle;"><%= moment(products[i].updatedAt).format('DD MMMM YYYY HH:mm:ss') %> (<%= (moment(products[i].updatedAt).fromNow()) %>)</td>
                  <td style="vertical-align: middle;">
                    <a href="/detail/<%= products[i].id %>" class="btn btn-primary btn-sm">Detail</a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>
